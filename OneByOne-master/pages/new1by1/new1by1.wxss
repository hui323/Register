/* new1by1.wxss */
.body{
  padding-bottom:120rpx;
}

.storeList{
  padding:20rpx 20rpx 0;
  position: relative;
  border-bottom: 6rpx solid #e8e8e8;
}

.tips{
  color:#000;
  background-color: #fcf38d;
  border-bottom: 1rpx solid #fcdd8d;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  height: 50rpx;
}

.des{
  border-bottom:10rpx solid #e8e8e8;
  padding:20rpx;
}

#description{
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  background-color: #fff;
  font-size: 30rpx;
  height: 200rpx;
  padding: 5rpx;
  width: 98%;
  color: #000;
  margin: 0 auto;
}

.placeholder{
  color:#999;
}

.opration{
  padding: 20rpx;
  overflow: hidden;
  margin-top:-6rpx;
  position: relative;
  background-color: #fff; 
}

#addStore{
  border: none;
  float: right;
}

.create{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  padding:10rpx 20rpx;
  background-color:#fff;
  z-index:1;
}

label{
  float:left;
  height:54rpx;
  line-height:54rpx;
  margin-right:30rpx;
  font-size: 30rpx;
  width: 130rpx;
}

input{
  font-size: 30rpx;
  color: #000;
  margin-right: 60rpx;
}

.cancelIcon{
  position: absolute;
  right: 0;
  top: -5rpx;
  width: 60rpx;
  height: 80rpx;
  text-align: right;
}

.list{
  padding:10rpx 0;
  border-bottom: 2rpx solid #eee;
}

.setTimeout{
  padding: 20rpx 20rpx 0;
  border-top: 10rpx solid #e8e8e8;
  overflow: hidden;
}

.datePicker,.timePicker{
  font-size: 30rpx;
  width: 200rpx;
  float: left;
  height:54rpx;
  line-height:54rpx;
}

